<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.GridPane?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.SecondaryController">
    <children>
        <Label text="GAME" />
        <Button fx:id="secondaryButton" text="Switch to Primary View" onAction="#switchToPrimary" />
    </children>
    <children>
        <GridPane xmlns:fx="http://javafx.com/fxml"
                  prefHeight="200" prefWidth="320"
                  alignment="center" hgap="20" vgap="20">
            <Button fx:id="top_left" text="-" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Button fx:id="top_center" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Button fx:id="top_right" text="-" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <Button fx:id="middle_left" text="-" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Button fx:id="middle_center" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Button fx:id="middle_right" text="-" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <Button fx:id="bottom_left" text="-" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <Button fx:id="bottom_center" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Button fx:id="bottom_right" text="-" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
